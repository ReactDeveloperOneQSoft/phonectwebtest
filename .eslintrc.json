{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true,
        "browser": true
    },
    "plugins": ["react"],
    "extends": ["plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "semi": 2,
        "quotes": ["error", "single"],
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2
    }
}
